extends layout

block content
  .w3-container.w3-padding-64.w3-center
    .w3-card-4.w3-white.w3-margin.w3-auto(style="max-width:600px")
      .w3-container.w3-blue.w3-center
        h2 Register
      
      form.w3-container.w3-padding-16(action="/register" method="POST")
        if error
          .w3-panel.w3-pale-red.w3-border
            p= error

        .w3-margin-bottom
          label.w3-text-grey
            b Email
          input.w3-input.w3-border(type="email" name="email" required)
        
        .w3-margin-bottom
          label.w3-text-grey
            b Username
          input.w3-input.w3-border(type="text" name="username" required)
        
        .w3-margin-bottom
          label.w3-text-grey
            b Password
          input.w3-input.w3-border(type="password" name="password" required)
        
        .w3-margin-bottom
          label.w3-text-grey
            b Full Name
          input.w3-input.w3-border(type="text" name="name" required)
        
        .w3-margin-bottom
          label.w3-text-grey
            b Birth Date
          input.w3-input.w3-border(type="date" name="birthdate" required)
        
        button.w3-button.w3-block.w3-blue.w3-margin-top(type="submit") Register
      
      .w3-container.w3-light-grey.w3-padding
        p.w3-center Already have an account? 
          a.w3-text-blue(href="/login") Login here
